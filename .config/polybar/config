;;============ Variables ==============
[colors]
background = #2f343f
background-alt = #4f545f
foreground = #d8dee8
foreground-alt = #787e68
primary = #81a1c1
secondary = #e60053
alert = #ebcb8b

[fonts]
primary = "Fira Mono:pixelsize=9;1"
secondary = "FontAwesome:pixelsize=9:fontformat=truetype:antialias=yes;1"
